<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class='col-xs-12'>
        <%= form_for @user do |f| %>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <label for="username">Username</label>
            </div>
            <div class="col-sm-8 col-form-label">
                <%= f.text_field :username, class:"form-control", id:"username", placeholder:"Enter username", autofocus: true  %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <label for="email">Email</label>
            </div>
            <div class="col-sm-8 col-form-label">
                <%= f.text_field :email, class:"form-control", id:"email", placeholder:"Enter email", autofocus: true  %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <label for="phone">Phone</label>
            </div>
            <div class="col-sm-8 col-form-label">
                <%= f.text_field :phone, class:"form-control", id:"phone", placeholder:"Enter phone", autofocus: true  %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <label for="password">Password</label>
            </div>
            <div class="col-sm-8 col-form-label">
                <%= f.password_field :password, class:"form-control", id:"password", placeholder:"Enter password", autofocus: true  %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-primary") %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= link_to "Cancel request and return to users listing", users_path %>
            </div>
          </div>
        <% end %>
    </div>
</div>

