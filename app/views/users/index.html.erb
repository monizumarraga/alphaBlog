<% provide(:titulo, "Users") %>

<div class='row'>
    <div class="well cv col-xs-8 col-offset-2">
        <div class='col-xs-12'>
            <h1 align='center'>Users</h1>
            <%= form_tag users_path, :method => 'get', :id => "users_search" do %>
              <div class="col-xs-8 col-xs-offset-2">
                  <div class="well-lg article">
                    <div class="center">
                      <%= text_field_tag :search, params[:search] %>
                      <%= submit_tag "Search", :name => nil %>
                    </div>
                </div>
            </div>
            <div id="users"><%= render 'list', obj: @users%></div>
          <% end %>
        </div>
    </div>
</div>