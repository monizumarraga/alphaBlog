<% provide(:titulo, "#{@seluser.username} CV") %>

<%if @seluser.detail %>
    <%= render 'details/profile', obj: @seluser.detail %>
<% else %>
    <div class="row">
         <div class="well cv col-xs-8 col-offset-2">
            <div class='col-xs-2 cv-logo'>
            </div>
            <div class='col-xs-12'>
                <h2 align='center'> Profile</h2>
            </div>
        </div>
    </div>
<%end %>
<div class="row">
    <div class="cv-link col-xs-8 col-offset-2">
        <div class='col-xs-2'>
        </div>
        <div class='col-xs-12'>
            <div style="display:'flex' flex-wrap:'rows'">
                <div class="article-actions col-xs-8">
                    <% categories=Category.all %>
                    <% if categories %>
                        <% categories.each do |cat| %>
                            <% relation= ArticleCategory.where(category_id: cat.id)%>
                            <% if relation && @seluser%>
                                <%= link_to cat.name, user_details_path(@seluser.id, name: cat.name), class: "btn btn-primary btn-xs" %>
                                <% if !true %>
                                <%= link_to cat.name, showarticle_path(@articles.reverse ), class: "btn btn-primary btn-xs" %>
                                <%end%>
                            <% end %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>