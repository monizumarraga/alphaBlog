<%= render 'shared/errors', obj: @category %>

<div class="row">
    <div class='col-xs-12'>
        <%= form_for @category do |f| %>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <label for="name">Name</label>
            </div>
            <div class="col-sm-8 col-form-label">
                <%= f.text_field :name, class:"form-control", id:"name", placeholder:"Name of category", autofocus: true  %>
            </div>
          </div>
          <% if logged_in? && current_user.admin? %>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                      <%= f.submit "#{@boton} category", class:"btn btn-primary" %>
                </div>
              </div>
          <% end %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= link_to "Cancel request and return to categories listing", articles_path %>
            </div>
          </div>
        <% end %>
    </div>
</div>

