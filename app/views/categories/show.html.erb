<% provide(:titulo, "category") %>


<h2 align='center'> Category: <%= @category.name %></h2>
<div class="well col-xs-8 col-offset-2">
    <div class="title-label">
        <h4><strong>Name: </strong></h4>
    </div>
    <hr>
    <%= simple_format(@category.name) %>
    <div class="article-actions">
        <% if logged_in? && (current_user.admin? )%>
            <%= link_to "Edit this category", edit_category_path(@category), class:"btn btn-primary btn-xs" %>
            <%= link_to "Delete this category", category_path(@category), method: :delete, 
                    data: { confirm: "Are you sure you want to delete the category?"},
                    class: "btn btn-xs btn-danger" %>
            <br>
        <% end %>
        <%= link_to "View all courses", categories_path, class:"btn btn-primary btn-xs" %>
    </div>
</div>

