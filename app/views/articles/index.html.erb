<% provide(:titulo, "Articles") %>

<div class='row'>
    <div class="well cv col-xs-8 col-offset-2">
        <div class='col-xs-12'>
            <h1 align='center'>Listing all articles</h1>
            <%= form_tag articles_path, :method => 'get', :id => "articles_search" do %>
              <div class="col-xs-8 col-xs-offset-2">
                  <div class="well-lg article">
                    <div class="center">
                      <%= text_field_tag :search, params[:search] %>
                      <%= submit_tag "Search", :name => nil %>
                    </div>
                </div>
            </div>
            <div id="article"><%= render 'listarticle', obj: @articles %></div>
          <% end %>
        </div>
    </div>
</div>
